@model PrescriptionUploadDto
@{
    ViewData["Title"] = "Prescription Hub";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;600;700&family=Cairo:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>
        :root {
            --glass-bg: rgba(255, 255, 255, 0.9);
            --primary-gradient: linear-gradient(45deg, #00dbde 0%, #fc00ff 100%);
            --accent-color: #6c5ce7;
        }

        body {
            font-family: 'Outfit', 'Cairo', sans-serif;
            background: #0f0c29;
            background: linear-gradient(to right, #24243e, #302b63, #0f0c29);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            overflow-x: hidden;
            padding: 20px;
        }

       
        .main-card {
            background: var(--glass-bg);
            backdrop-filter: blur(10px);
            border-radius: 30px;
            border: 1px solid rgba(255, 255, 255, 0.2);
            box-shadow: 0 25px 50px rgba(0,0,0,0.3);
            overflow: hidden;
            animation: slideUp 0.8s ease-out;
        }

        @@keyframes slideUp {
            from

        {
            opacity: 0;
            transform: translateY(50px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        .header-section {
            background: var(--primary-gradient);
            padding: 40px 20px;
            text-align: center;
            color: white;
            clip-path: polygon(0 0, 100% 0, 100% 85%, 0% 100%);
        }

            .header-section i {
                font-size: 3.5rem;
                text-shadow: 0 5px 15px rgba(0,0,0,0.2);
                margin-bottom: 10px;
            }

        .form-label {
            font-weight: 600;
            color: #2d3436;
            margin-bottom: 8px;
            font-size: 0.9rem;
        }

        .input-group-custom {
            position: relative;
            margin-bottom: 20px;
        }

        .form-control-custom {
            width: 100%;
            padding: 12px 15px 12px 45px;
            border-radius: 12px;
            border: 2px solid #eee;
            background: #fdfdfd;
            transition: all 0.3s ease;
        }

            .form-control-custom:focus {
                border-color: var(--accent-color);
                box-shadow: 0 0 15px rgba(108, 92, 231, 0.1);
                outline: none;
                background: #fff;
            }

        .input-icon {
            position: absolute;
            left: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: #a29bfe;
            z-index: 10;
        }

        /* منطقة رفع الملفات المتطورة */
        .upload-zone {
            border: 2px dashed #b2bec3;
            border-radius: 20px;
            padding: 30px;
            text-align: center;
            transition: 0.3s;
            background: #f8f9fa;
            position: relative;
            cursor: pointer;
        }

            .upload-zone:hover {
                border-color: var(--accent-color);
                background: #efedff;
            }

        #preview-container {
            width: 100px;
            height: 100px;
            margin: 10px auto;
            border-radius: 15px;
            overflow: hidden;
            display: none;
            border: 3px solid white;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }

            #preview-container img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

        .btn-submit {
            background: var(--primary-gradient);
            border: none;
            border-radius: 15px;
            padding: 15px;
            color: white;
            font-weight: 700;
            letter-spacing: 1px;
            text-transform: uppercase;
            transition: 0.4s;
            margin-top: 20px;
            box-shadow: 0 10px 20px rgba(252, 0, 255, 0.2);
        }

            .btn-submit:hover {
                transform: scale(1.02);
                box-shadow: 0 15px 25px rgba(252, 0, 255, 0.4);
                color: #fff;
            }

        .error-msg {
            color: #ff7675;
            font-size: 0.8rem;
            font-weight: 500;
        }
    </style>
</head>
<body>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-5 col-lg-6 col-md-8">
                <div class="main-card">
                    <div class="header-section">
                        <i class="fa-solid fa-file-invoice-dollar"></i>
                        <h2 class="fw-bold">Smart Prescription</h2>
                        <p class="mb-0 opacity-75">Secure & Fast Upload</p>
                    </div>

                    <div class="card-body p-4 p-md-5">
                        <form asp-action="Upload" method="post" enctype="multipart/form-data">

                            <div class="input-group-custom">
                                <label asp-for="FullName" class="form-label">Patient Name</label>
                                <i class="fa-solid fa-id-card input-icon"></i>
                                <input asp-for="FullName" class="form-control-custom" placeholder="Enter your full name">
                                <span asp-validation-for="FullName" class="error-msg"></span>
                            </div>

                            <div class="input-group-custom">
                                <label asp-for="PhoneNumber" class="form-label">Phone Connection</label>
                                <i class="fa-solid fa-mobile-screen input-icon"></i>
                                <input asp-for="PhoneNumber" class="form-control-custom" placeholder="+20 1xx xxx xxxx">
                                <span asp-validation-for="PhoneNumber" class="error-msg"></span>
                            </div>

                            <div class="input-group-custom">
                                <label asp-for="Address" class="form-label">Delivery Destination</label>
                                <i class="fa-solid fa-location-dot input-icon"></i>
                                <textarea asp-for="Address" class="form-control-custom" rows="2" placeholder="Where should we deliver?"></textarea>
                                <span asp-validation-for="Address" class="error-msg"></span>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Prescription Document</label>
                                <div class="upload-zone" onclick="document.getElementById('fileInput').click()">
                                    <div id="upload-content">
                                        <i class="fa-solid fa-cloud-arrow-up fa-2x text-muted mb-2"></i>
                                        <p class="mb-0 text-muted small">Tap to upload or drag image here</p>
                                    </div>

                                    <div id="preview-container">
                                        <img id="img-preview" src="#" alt="preview">
                                    </div>

                                    <input asp-for="File" type="file" id="fileInput" hidden accept="image/*">
                                </div>
                                <span asp-validation-for="File" class="error-msg"></span>
                            </div>

                            <button type="submit" class="btn btn-submit w-100">
                                Process Prescription <i class="fa-solid fa-wand-magic-sparkles ms-2"></i>
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
       
        const fileInput = document.getElementById('fileInput');
        const previewContainer = document.getElementById('preview-container');
        const imgPreview = document.getElementById('img-preview');
        const uploadContent = document.getElementById('upload-content');

        fileInput.addEventListener('change', function() {
            const file = this.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    imgPreview.setAttribute('src', e.target.result);
                    previewContainer.style.display = 'block';
                    uploadContent.style.display = 'none';
                }
                reader.readAsDataURL(file);
            }
        });
    </script>

</body>
</html>