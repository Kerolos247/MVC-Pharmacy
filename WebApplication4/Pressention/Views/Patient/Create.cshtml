@model RequestCreatePatient
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SaaS Pharmacy | Register Patient</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700;800&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/css/Patient_Create.css">
</head>
<body>

    <div class="form-card">
        <div class="header">
            <div class="icon-box">👤</div>
            <h1>New Patient</h1>
            <p>Fill in the details to register a new patient in the system.</p>
        </div>

        <form asp-action="Create" method="post">

            <div class="form-group">
                <label asp-for="FullName">Full Name</label>
                <input asp-for="FullName" class="form-control" placeholder="Enter patient's full name" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Phone">Phone Number</label>
                <input asp-for="Phone" class="form-control" placeholder="e.g. +1 555-0123" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Address">Residential Address</label>
                <input asp-for="Address" class="form-control" placeholder="Street, City, Building..." />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <div class="button-container">
                <button type="submit" class="btn-create">Register Patient</button>
                <a asp-action="Index" class="btn-cancel">Go Back</a>
            </div>

        </form>
    </div>

</body>
</html>