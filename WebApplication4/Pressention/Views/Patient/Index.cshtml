@model IEnumerable<Patient>
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SaaS Pharmacy | Patient Directory</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/css/Patient_Main.css">
</head>
<body>

    <div class="container">
        <header class="page-header">
            <h1>Patients Directory</h1>
            <div class="btn-group">
                <a asp-controller="Auth" asp-action="Main" class="btn btn-back">
                    <span>←</span> Dashboard
                </a>
                <a asp-action="Create" class="btn btn-add">
                    <span>+</span> Add Patient
                </a>
            </div>
        </header>

        <div class="search-container">
            <div class="search-wrapper">
                <input type="text" id="searchInput" placeholder="Search by name, phone, or city..." />
            </div>
        </div>

        <div class="table-container">
            <table class="table" id="patientsTable">
                <thead>
                    <tr>
                        <th>Full Name</th>
                        <th>Phone Number</th>
                        <th>Home Address</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var patient in Model)
                    {
                        <tr>
                            <td data-label="Full Name">
                                <span class="patient-name">@patient.FullName</span>
                            </td>
                            <td data-label="Phone">
                                <a href="tel:@patient.Phone" class="phone-link">📞 @patient.Phone</a>
                            </td>
                            <td data-label="Address">
                                <span class="address-text" title="@patient.Address">📍 @patient.Address</span>
                            </td>
                            <td data-label="Actions">
                                <div class="actions-cell">
                                    <a asp-action="Details" asp-route-id="@patient.PatientId" class="action-icon btn-info-icon" title="View Profile">👁</a>
                                    <a asp-action="Edit" asp-route-id="@patient.PatientId" class="action-icon btn-edit-icon" title="Edit Patient">✏️</a>
                                    <a asp-action="Delete" asp-route-id="@patient.PatientId" class="action-icon btn-delete-icon" title="Remove Patient">🗑</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <script src="~/js/Patient_Main.js"></script>
</body>
</html>