@model PatientFeedbackDto
@{
    ViewData["Title"] = "Feedback Hub";
    Layout = null;
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700&family=Outfit:wght@300;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>
        :root {
            --glass-bg: rgba(255, 255, 255, 0.92);
            --primary-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            --accent-color: #764ba2;
        }

        body {
            font-family: 'Cairo', 'Outfit', sans-serif;
            background: #1a1a2e; /* خلفية داكنة لتبقظ الألوان */
            background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
            color: #2d3436;
        }

        .main-card {
            background: var(--glass-bg);
            backdrop-filter: blur(15px);
            border-radius: 30px;
            border: 1px solid rgba(255, 255, 255, 0.3);
            box-shadow: 0 25px 50px rgba(0,0,0,0.3);
            width: 100%;
            max-width: 550px;
            overflow: hidden;
            animation: fadeInScale 0.7s ease-out;
        }

        @@keyframes fadeInScale {
            from {
                opacity: 0;
                transform: scale(0.9);
            }

            to {
                opacity: 1;
                transform: scale(1);
            }
        }

        .header-section {
            background: var(--primary-gradient);
            padding: 40px 20px;
            text-align: center;
            color: white;
            clip-path: polygon(0 0, 100% 0, 100% 85%, 0% 100%);
        }

            .header-section i {
                font-size: 3rem;
                margin-bottom: 15px;
                filter: drop-shadow(0 5px 10px rgba(0,0,0,0.2));
            }

        .form-label {
            font-weight: 700;
            color: #4834d4;
            font-size: 0.95rem;
            margin-right: 5px;
        }

        .input-group-custom {
            position: relative;
            margin-bottom: 20px;
        }

        .form-control-custom {
            width: 100%;
            padding: 12px 45px 12px 15px; /* عكس الـ Padding عشان الـ RTL */
            border-radius: 15px;
            border: 2px solid #eee;
            background: #fdfdfd;
            transition: all 0.3s ease;
        }

            .form-control-custom:focus {
                border-color: var(--accent-color);
                box-shadow: 0 0 15px rgba(118, 75, 162, 0.1);
                outline: none;
                background: #fff;
            }

        .input-icon {
            position: absolute;
            right: 15px; /* يمين عشان العربي */
            top: 42px; /* تعديل المكان حسب الـ Label */
            color: var(--accent-color);
            z-index: 10;
            font-size: 1.1rem;
        }

        .btn-submit {
            background: var(--primary-gradient);
            border: none;
            border-radius: 15px;
            padding: 15px;
            color: white;
            font-weight: 700;
            font-size: 1.1rem;
            transition: 0.4s;
            box-shadow: 0 10px 20px rgba(118, 75, 162, 0.3);
        }

            .btn-submit:hover {
                transform: translateY(-3px);
                box-shadow: 0 15px 25px rgba(118, 75, 162, 0.5);
                color: #fff;
            }

        .error-msg {
            color: #eb4d4b;
            font-size: 0.8rem;
            font-weight: 600;
            margin-top: 5px;
            display: block;
        }
    </style>
</head>
<body>

    <div class="main-card">
        <div class="header-section">
            <i class="fa-solid fa-heart-pulse"></i>
            <h2 class="fw-bold">شاركنا رأيك</h2>
            <p class="mb-0 opacity-75">ملاحظاتك تساعدنا على التطور</p>
        </div>

        <div class="card-body p-4 p-md-5">
            <form asp-action="CreateFeedback" method="post">

                <div asp-validation-summary="ModelOnly" class="error-msg mb-3"></div>

                <div class="input-group-custom">
                    <label asp-for="PatientName" class="form-label">اسم المريض</label>
                    <i class="fa-solid fa-user-circle input-icon"></i>
                    <input asp-for="PatientName" class="form-control-custom" placeholder="اكتب اسمك هنا">
                    <span asp-validation-for="PatientName" class="error-msg"></span>
                </div>

                <div class="input-group-custom">
                    <label asp-for="PhoneNumber" class="form-label">رقم التواصل</label>
                    <i class="fa-solid fa-phone-flip input-icon"></i>
                    <input asp-for="PhoneNumber" class="form-control-custom" placeholder="01xxxxxxxxx">
                    <span asp-validation-for="PhoneNumber" class="error-msg"></span>
                </div>

                <div class="input-group-custom">
                    <label asp-for="Address" class="form-label">العنوان</label>
                    <i class="fa-solid fa-map-location-dot input-icon"></i>
                    <input asp-for="Address" class="form-control-custom" placeholder="المحافظة - المدينة">
                    <span asp-validation-for="Address" class="error-msg"></span>
                </div>

                <div class="input-group-custom">
                    <label asp-for="Notes" class="form-label">رأيك في الخدمة</label>
                    <i class="fa-solid fa-pen-nib input-icon"></i>
                    <textarea asp-for="Notes" class="form-control-custom" rows="3" placeholder="أخبرنا عن تجربتك..."></textarea>
                    <span asp-validation-for="Notes" class="error-msg"></span>
                </div>

                <button type="submit" class="btn btn-submit w-100 mt-3">
                    إرسال التقييم <i class="fa-solid fa-paper-plane ms-2"></i>
                </button>
            </form>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>

</body>
</html>