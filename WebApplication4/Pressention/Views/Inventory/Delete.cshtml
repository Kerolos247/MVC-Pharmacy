@model InventoryDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SaaS Pharmacy | Delete Inventory</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/InventoryDelete.css" />
</head>
<body>

    <div class="delete-card">
        <div class="warning-icon">⚠️</div>
        <h1>Confirm Deletion</h1>
        <p class="subtitle">Are you sure you want to remove this item from inventory? This action cannot be undone.</p>

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
        }

        <div class="info-grid">
            <div class="info-item">
                <span class="label">Medicine:</span>
                <span class="value">@Model.MedicineName</span>
            </div>
            <div class="info-item">
                <span class="label">Form:</span>
                <span class="value">@Model.DosageForm</span>
            </div>
            <div class="info-item">
                <span class="label">Strength:</span>
                <span class="value">@Model.Strength</span>
            </div>
            <div class="info-item">
                <span class="label">Quantity:</span>
                <span class="value">@Model.Quantity</span>
            </div>
            <div class="info-item">
                <span class="label">Expiry:</span>
                <span class="value">@Model.ExpiryDate.ToShortDateString()</span>
            </div>
        </div>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="InventoryId" />
            <button type="submit" class="btn-danger">
                Yes, Delete Item
            </button>
            <a asp-action="Index" class="btn-cancel">Go Back</a>
        </form>
    </div>

</body>
</html>