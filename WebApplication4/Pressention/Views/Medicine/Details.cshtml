@model Medicine
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SaaS Pharmacy | Medicine Details</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/Medicine_Details.css">
</head>
<body>

    <div class="details-card">
        <div class="header">
            <span class="icon">💊</span>
            <h1>Medicine Profile</h1>
        </div>

        <div class="info-grid">
            <div class="info-item full-width">
                <span class="label">Scientific Name</span>
                <span class="value" style="font-size: 18px; color: var(--primary);">@Model.Name</span>
            </div>

            <div class="info-item full-width">
                <span class="label">Description</span>
                <span class="value">@Model.Description</span>
            </div>

            <div class="info-item">
                <span class="label">Dosage Form</span>
                <span class="value">@Model.DosageForm</span>
            </div>

            <div class="info-item">
                <span class="label">Strength</span>
                <span class="value">@Model.Strength</span>
            </div>

            <div class="info-item">
                <span class="label">Category</span>
                <span class="value">@(Model.Category?.Name ?? "N/A")</span>
            </div>

            <div class="info-item">
                <span class="label">Supplier</span>
                <span class="value">@(Model.Supplier?.Name ?? "N/A")</span>
            </div>

            <div class="info-item">
                <span class="label">Stock Status</span>
                <span class="value" style="color: @(Model.Inventory?.Quantity > 0 ? "var(--primary)" : "var(--danger)")">
                    @(Model.Inventory != null ? Model.Inventory.Quantity.ToString() + " units" : "Out of Stock")
                </span>
            </div>

            <div class="info-item">
                <span class="label">Retail Price</span>
                <span class="price-value">@Model.Price.ToString("C")</span>
            </div>
        </div>

        <div class="actions">
            <a asp-action="Index" class="btn btn-back">Back</a>
            <a asp-action="Edit" asp-route-id="@Model.MedicineId" class="btn btn-edit">Edit</a>
            <a asp-action="Delete" asp-route-id="@Model.MedicineId" class="btn btn-delete">Delete</a>
        </div>
    </div>

</body>
</html>
