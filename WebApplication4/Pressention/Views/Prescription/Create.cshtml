@model RequestCreatePrescription
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SaaS Pharmacy | New Prescription</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700;800&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/css/Prescription_Create.css">
</head>
<body>

    <div class="create-container">
        <div class="header">
            <h1>New Prescription</h1>
            <p>Issue a digital medical record for a patient</p>
        </div>

        <form asp-action="Create" method="post">
            <div class="form-group">
                <label asp-for="Date">Prescription Date</label>
                <input asp-for="Date" class="form-control" type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PatientId">Target Patient</label>
                <select asp-for="PatientId" asp-items="ViewBag.Patients" class="form-select">
                    <option value="">-- Search and Select Patient --</option>
                </select>
                <span asp-validation-for="PatientId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Notes">Clinical Observations</label>
                <textarea asp-for="Notes" class="form-control" placeholder="Enter medications in the Prescription Details section..."></textarea>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>

            <input type="hidden" asp-for="PharmacistId" value="@User.Identity.Name" />

            <div class="actions">
                <button type="submit" class="btn btn-success">
                    <span>✨</span> Create Record
                </button>
                <a asp-action="Index" class="btn btn-cancel">Discard Changes</a>
            </div>
        </form>
    </div>

</body>
</html>