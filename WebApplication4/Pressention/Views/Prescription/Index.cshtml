@model IEnumerable<Prescription>
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SaaS Pharmacy | Prescriptions Management</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700;800&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/css/Prescription_Main.css">
</head>
<body>

    <div id="toast-container">
        @if (TempData["TotalCost"] != null)
        {
            <div class="alert-toast success">
                <span class="toast-icon">💰</span>
                <div class="toast-content">
                    <span class="toast-label">Invoice Settled</span>
                    <span class="toast-msg">Total Cost: @TempData["TotalCost"]</span>
                </div>
            </div>
        }

        @if (TempData["SuccessMessage"] != null || ViewBag.Message != null)
        {
            <div class="alert-toast success">
                <span class="toast-icon">✅</span>
                <div class="toast-content">
                    <span class="toast-label">System Notification</span>
                    <span class="toast-msg">@(TempData["SuccessMessage"] ?? ViewBag.Message)</span>
                </div>
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert-toast error">
                <span class="toast-icon">🚫</span>
                <div class="toast-content">
                    <span class="toast-label">Process Halted</span>
                    <span class="toast-msg">@TempData["ErrorMessage"]</span>
                </div>
            </div>
        }
    </div>

    <div class="container">
        <header class="page-header">
            <div>
                <h1>Prescriptions</h1>
                <p style="color: var(--text-dim); margin-top: 5px;">Manage pharmacy records and billing status</p>
            </div>
            <div style="display: flex; gap: 12px;">
                <a href="/auth/main" class="btn btn-secondary">Dashboard</a>
                <a asp-action="Create" class="btn btn-primary">+ New Prescription</a>
            </div>
        </header>

        <div class="search-container">
            <span class="search-icon">🔍</span>
            <input type="text" id="searchInput" placeholder="Search by patient, date, or status..." />
        </div>

        <div class="table-card">
            <table class="table" id="presTable">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Patient Name</th>
                        <th>Notes</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var pres in Model)
                    {
                        <tr>
                            <td style="font-weight: 600;">@pres.Date.ToString("MMM dd, yyyy")</td>
                            <td>
                                <div style="display: flex; align-items: center; gap: 10px;">
                                    <div style="width: 32px; height: 32px; border-radius: 50%; background: rgba(255,255,255,0.05); display: flex; align-items: center; justify-content: center; font-size: 12px; border: 1px solid rgba(255,255,255,0.1);">👤</div>
                                    @pres.Patient.FullName
                                </div>
                            </td>
                            <td style="color: var(--text-dim); font-style: italic; font-size: 13px;">@(string.IsNullOrEmpty(pres.Notes) ? "---" : pres.Notes)</td>
                            <td>
                                <span class="status-badge status-@pres.Status.ToString().ToLower()">
                                    @pres.Status
                                </span>
                            </td>
                            <td>
                                <div style="display: flex; align-items: center; gap: 15px;">
                                    <div class="action-links">
                                        <a asp-action="Details" asp-route-id="@pres.PrescriptionId" title="View Details">👁️</a>
                                        <a asp-action="Edit" asp-route-id="@pres.PrescriptionId" title="Edit">✏️</a>
                                        <a asp-action="Delete" asp-route-id="@pres.PrescriptionId" style="color: var(--danger)" title="Delete">🗑️</a>
                                    </div>
                                    <form asp-action="Pay" method="post" style="margin:0;">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@pres.PrescriptionId" />
                                        <button type="submit" class="btn btn-pay"
                                        @(pres.Status == PrescriptionStatus.Paid ? "disabled" : "")>
                                            @(pres.Status == PrescriptionStatus.Paid ? "Paid" : "Pay")
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <script src="~/js/Prescription_Main.js"></script>
</body>
</html>