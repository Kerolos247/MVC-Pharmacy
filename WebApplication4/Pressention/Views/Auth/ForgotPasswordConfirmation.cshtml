@{
    Layout = null;
    ViewData["Title"] = "Forgot Password Confirmation";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SaaS Pharmacy | Link Sent</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700;800&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/css/ForgotPasswordConfirmation.css" />
</head>
<body>

    <div class="character-wrapper" id="doctor-ai">
        <svg class="doctor-svg" viewBox="0 0 200 200" xmlns="http://www.w3.org/2000/svg">
            <path d="M40,200 L160,200 L152,130 Q100,95 48,130 Z" fill="#ffffff" />
            <path d="M85,135 L100,160 L115,135" fill="#f8fafc" />
            <circle cx="100" cy="82" r="48" fill="#ffdbac" />
            <g id="eyes">
                <circle cx="82" cy="85" r="10" fill="white" />
                <circle cx="118" cy="85" r="10" fill="white" />
                <circle class="pupil" cx="82" cy="85" r="5" fill="#111" />
                <circle class="pupil" cx="118" cy="85" r="5" fill="#111" />
            </g>
            <path d="M85,105 Q100,115 115,105" fill="none" stroke="#2d1b15" stroke-width="2" stroke-linecap="round" />
            <path d="M52,70 Q100,20 148,70" fill="none" stroke="#2d1b15" stroke-width="15" stroke-linecap="round" />
        </svg>
    </div>

    <div class="confirm-card">
        <div class="icon-box">✓</div>
        <h1>Reset Link Sent</h1>

        <p>If an account with this email exists, a password reset link has been sent to your inbox.</p>
        <p>Please check your email and follow the instructions to reset your password.</p>

        @if (ViewData.ModelState.ErrorCount > 0)
        {
            <div class="alert alert-danger" role="alert">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <div>@error.ErrorMessage</div>
                }
            </div>
        }

        <a asp-controller="Auth" asp-action="Login" class="btn-login">
            Back to Login
        </a>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/ForgotPasswordConfirmation.js"></script>
</body>
</html>