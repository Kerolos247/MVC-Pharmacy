@model DashboardViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Pharmacy SaaS | Dashboard Overview</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/Main.css" />
</head>
<body>
    <div class="sidebar">
        <h2>Pharmacy</h2>
        <nav>
            <a href="/Dashboard/Index" class="active"><span>📊</span> Dashboard</a>
            <a href="/Patient/Index"><span>🧑‍⚕️</span> Patients</a>
            <a href="/Medicine/Index"><span>💊</span> Medicines</a>
            <a href="/Prescription/Index"><span>📄</span> Prescriptions</a>
            <a href="/Supplier/Index"><span>🏭</span> Suppliers</a>
            <a href="/Inventory/Index"><span>🏠</span> Inventory</a>
            <a href="/PrescriptionUpload/GetAllPrescriptionUploaded"><span>📤</span> Prescription Uploaded</a>
        </nav>

        <form asp-controller="Auth" asp-action="Logout" method="post" class="mt-auto">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn-logout">
                <span>🚪</span> Logout
            </button>
        </form>
    </div>

    <div class="main-content">
        <header class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="page-title">Dashboard Overview</h1>
            <div class="user-profile">
                <span class="badge bg-success p-2">System Live</span>
            </div>
        </header>

        <div class="row g-4">
            <div class="col-xl-3 col-md-6">
                <div class="dashboard-card card-patients">
                    <div class="icon-box">🧑‍⚕️</div>
                    <h4>Patients</h4>
                    <div class="number">@Model.PatientsCount</div>
                    <p>Total registered patients</p>
                </div>
            </div>

            <div class="col-xl-3 col-md-6">
                <div class="dashboard-card card-medicines">
                    <div class="icon-box">💊</div>
                    <h4>Medicines</h4>
                    <div class="number">@Model.MedicinesCount</div>
                    <p>Items currently in stock</p>
                </div>
            </div>

            <div class="col-xl-3 col-md-6">
                <div class="dashboard-card card-suppliers">
                    <div class="icon-box">🏭</div>
                    <h4>Suppliers</h4>
                    <div class="number">@Model.SuppliersCount</div>
                    <p>Verified pharmaceutical suppliers</p>
                </div>
            </div>

            <div class="col-xl-3 col-md-6">
                <div class="dashboard-card card-prescriptions">
                    <div class="icon-box">📄</div>
                    <h4>Prescriptions</h4>
                    <div class="number">@Model.PrescriptionsCount</div>
                    <p>Processed this month</p>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>