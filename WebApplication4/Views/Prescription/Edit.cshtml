@{
    Layout = null;
}

@model WebApplication4.Dto.UpdatePrescriptionDto

<link rel="stylesheet" href="~/css/EditPrescription.css" />

<div class="container-center">
    <h1>Edit Prescription</h1>
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="PharmacistId" />

        <div class="mb-3">
            <label asp-for="Date"></label>
            <input asp-for="Date" class="form-control" type="date" value="@Model.Date?.ToString("yyyy-MM-dd")" />
        </div>

        <div class="mb-3">
            <label asp-for="PatientId">Patient</label>
            <select asp-for="PatientId" asp-items="ViewBag.Patients" class="form-select">
                <option value="">-- Select Patient --</option>
            </select>
        </div>

        <div class="mb-3">
            <label asp-for="Notes"></label>
            <textarea asp-for="Notes" class="form-control">@Model.Notes</textarea>
        </div>

        <button type="submit" class="btn btn-warning">Update</button>
    </form>
</div>
