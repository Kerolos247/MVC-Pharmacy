@model WebApplication4.Models.Prescription

<h1>Prescription Details</h1>

<table class="table table-bordered">
    <tr>
        <th>Date</th>
        <td>@Model.Date.ToString("yyyy-MM-dd")</td>
    </tr>
    <tr>
        <th>Patient</th>
        <td>@Model.Patient.FullName</td>
    </tr>
    <tr>
        <th>Notes</th>
        <td>@Model.Notes</td>
    </tr>
    <tr>
        <th>Pharmacist</th>
        <td>@Model.Pharmacist.UserName</td>
    </tr>
</table>

<a asp-action="Edit" asp-route-id="@Model.PrescriptionId" class="btn btn-warning">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back to List</a>
