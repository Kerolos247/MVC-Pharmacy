@model WebApplication4.Models.Prescription
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SaaS Pharmacy | Prescription Info</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700;800&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/css/Prescription_Details.css">
</head>
<body>

    <div class="details-card">
        <div class="header">
            <span class="status-pill">RX RECORD #@Model.PrescriptionId</span>
            <h1>Prescription Details</h1>
            <p>Digital medical record overview</p>
        </div>

        <div class="info-grid">
            <div class="info-item">
                <span class="info-label">Issue Date</span>
                <span class="info-value">📅 @Model.Date.ToString("MMMM dd, yyyy")</span>
            </div>

            <div class="info-item">
                <span class="info-label">Patient Name</span>
                <span class="info-value">👤 @Model.Patient.FullName</span>
            </div>

            <div class="info-item">
                <span class="info-label">Authorized By</span>
                <span class="info-value">👨‍⚕️ @Model.Pharmacist.UserName</span>
            </div>

            <div class="info-item">
                <span class="info-label">Current Status</span>
                <span class="info-value">@Model.Status</span>
            </div>

            <div class="info-item notes-box">
                <span class="info-label">Clinical Notes</span>
                <span class="info-value" style="font-weight: 400; font-style: italic; color: var(--text-dim);">
                    @(string.IsNullOrEmpty(Model.Notes) ? "No additional notes provided for this record." : Model.Notes)
                </span>
            </div>
        </div>

        <div class="footer-actions">
            <a asp-action="Index" class="btn btn-secondary">
                <span>←</span> Back to Registry
            </a>
            <a asp-action="Edit" asp-route-id="@Model.PrescriptionId" class="btn btn-warning">
                <span>✏️</span> Edit Record
            </a>
        </div>
    </div>

</body>
</html>