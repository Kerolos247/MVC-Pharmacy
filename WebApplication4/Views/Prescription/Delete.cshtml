@model WebApplication4.Models.Prescription
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SaaS Pharmacy | Delete Confirmation</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700;800&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/css/Prescription_Delete.css">
</head>
<body>

    <div class="delete-card">
        <div class="warning-icon">⚠️</div>

        <div class="header">
            <h1>Delete Prescription?</h1>
            <p>This action is permanent and cannot be undone.</p>
        </div>

        <div class="summary-box">
            <div class="summary-item">
                <span class="label">Patient Name</span>
                <span class="value">👤 @Model.Patient.FullName</span>
            </div>
            <div class="summary-item">
                <span class="label">Issue Date</span>
                <span class="value">📅 @Model.Date.ToString("MMMM dd, yyyy")</span>
            </div>
            <div class="summary-item">
                <span class="label">Clinical Notes</span>
                <span class="value" style="font-weight: 400; font-style: italic; color: var(--text-dim);">
                    @(string.IsNullOrEmpty(Model.Notes) ? "No notes available." : Model.Notes)
                </span>
            </div>
        </div>

        <div class="actions">
            <form asp-action="Delete" method="post" style="width: 100%;">
                <input type="hidden" asp-for="PrescriptionId" />
                <button type="submit" class="btn btn-danger">
                    🗑️ Confirm Destruction
                </button>
            </form>
            <a asp-action="Index" class="btn btn-secondary">Cancel & Keep Record</a>
        </div>
    </div>

</body>
</html>