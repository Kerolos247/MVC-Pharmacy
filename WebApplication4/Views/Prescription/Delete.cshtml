@{
    Layout = null;
}

@model WebApplication4.Models.Prescription

<link rel="stylesheet" href="~/css/PrescriptionDelete.css" />

<h1>Delete Prescription</h1>

<div class="alert alert-danger">
    Are you sure you want to delete this prescription?
</div>

<div class="table-container">
    <table class="table table-bordered">
        <tr>
            <th>Date</th>
            <td>@Model.Date.ToString("yyyy-MM-dd")</td>
        </tr>
        <tr>
            <th>Patient</th>
            <td>@Model.Patient.FullName</td>
        </tr>
        <tr>
            <th>Notes</th>
            <td>@Model.Notes</td>
        </tr>
    </table>
</div>

<div style="text-align: center;">
    <form asp-action="Delete" method="post" style="display:inline;">
        <input type="hidden" asp-for="PrescriptionId" />
        <button type="submit" class="btn btn-danger">Delete</button>
    </form>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</div>
