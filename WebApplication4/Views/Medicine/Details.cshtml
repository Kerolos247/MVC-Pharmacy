@{
    Layout = null;
}

@model WebApplication4.Models.Medicine

<h1>Medicine Details</h1>
<link rel="stylesheet" href="~/css/medicine-details.css" />

<table class="details-table">
    <tbody>
        <tr>
            <th>Name</th>
            <td>@Model.Name</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>@Model.Description</td>
        </tr>
        <tr>
            <th>Dosage Form</th>
            <td>@Model.DosageForm</td>
        </tr>
        <tr>
            <th>Strength</th>
            <td>@Model.Strength</td>
        </tr>
        <tr>
            <th>Price</th>
            <td>@Model.Price.ToString("C")</td>
        </tr>
        <tr>
            <th>Category</th>
            <td>@Model.Category?.Name</td>
        </tr>
        <tr>
            <th>Supplier</th>
            <td>@Model.Supplier?.Name</td>
        </tr>
        <tr>
            <th>Quantity Available</th>
            <td>@(Model.Inventory != null ? Model.Inventory.Quantity.ToString() : "0")</td>
        </tr>
    </tbody>
</table>

<div class="details-buttons">
    <a asp-action="Edit" asp-route-id="@Model.MedicineId" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    <a asp-action="Delete" asp-route-id="@Model.MedicineId" class="btn btn-danger">Delete</a>
</div>
