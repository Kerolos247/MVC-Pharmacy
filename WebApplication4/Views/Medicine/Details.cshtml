@model WebApplication4.Models.Medicine

@{
    ViewData["Title"] = "Medicine Details";
}

<h1>Medicine Details</h1>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@Model.Name</dd>

            <dt class="col-sm-2">Description</dt>
            <dd class="col-sm-10">@Model.Description</dd>

            <dt class="col-sm-2">Dosage Form</dt>
            <dd class="col-sm-10">@Model.DosageForm</dd>

            <dt class="col-sm-2">Strength</dt>
            <dd class="col-sm-10">@Model.Strength</dd>

            <dt class="col-sm-2">Price</dt>
            <dd class="col-sm-10">@Model.Price.ToString("C")</dd>

            <dt class="col-sm-2">Category</dt>
            <dd class="col-sm-10">@Model.Category?.Name</dd>

            <dt class="col-sm-2">Supplier</dt>
            <dd class="col-sm-10">@Model.Supplier?.Name</dd>
        </dl>

        <a asp-action="Edit" asp-route-id="@Model.MedicineId" class="btn btn-warning">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        <a asp-action="Delete" asp-route-id="@Model.MedicineId" class="btn btn-danger">Delete</a>
    </div>
</div>
