@{
    Layout = null;
}

@model WebApplication4.Models.Medicine

<h1>Delete Medicine</h1>
<link rel="stylesheet" href="~/css/delete-medicine.css" />

@if (ViewBag.ErrorMessage != null)
{
    <script type="text/javascript">
        alert('@ViewBag.ErrorMessage');
    </script>
}

<table class="delete-table">
    <tbody>
        <tr>
            <th>Name</th>
            <td>@Model.Name</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>@Model.Description</td>
        </tr>
        <tr>
            <th>Dosage Form</th>
            <td>@Model.DosageForm</td>
        </tr>
        <tr>
            <th>Strength</th>
            <td>@Model.Strength</td>
        </tr>
        <tr>
            <th>Price</th>
            <td>@Model.Price.ToString("C")</td>
        </tr>
        <tr>
            <th>Category</th>
            <td>@Model.Category?.Name</td>
        </tr>
        <tr>
            <th>Supplier</th>
            <td>@Model.Supplier?.Name</td>
        </tr>
        <tr>
            <th>Quantity Available</th>
            <td>
                @(Model.Inventory != null ? Model.Inventory.Quantity.ToString() : "0")
            </td>
        </tr>
    </tbody>
</table>

<div class="delete-buttons">
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="MedicineId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
