@{
    Layout = null;
}

@model IEnumerable<WebApplication4.Models.Medicine>

<link rel="stylesheet" href="~/css/IndexMedicines.css" />

<div class="top-buttons">
    <a asp-controller="Auth" asp-action="Main" class="btn btn-secondary">Back to Dashboard</a>
    <a asp-action="Create" class="btn btn-primary">Add New Medicine</a>
</div>

<h1>Medicines</h1>


<div class="search-wrapper" style="text-align:center; margin:20px 0;">
    <input type="text" id="searchInput" placeholder="Search medicines by name, description, dosage, strength, or price..."
           style="padding:10px 15px; width:350px; border-radius:12px; border:1px solid #ccc; font-size:16px;" />
</div>


<table class="table table-striped" id="medicinesTable">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Dosage Form</th>
            <th>Strength</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var med in Model)
        {
            <tr>
                <td data-label="Name">@med.Name</td>
                <td data-label="Description">@med.Description</td>
                <td data-label="Dosage Form">@med.DosageForm</td>
                <td data-label="Strength">@med.Strength</td>
                <td data-label="Price">@med.Price.ToString("C")</td>
                <td data-label="Actions">
                    <a asp-action="Details" asp-route-id="@med.MedicineId" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@med.MedicineId" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@med.MedicineId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>


<script>
    const searchInput = document.getElementById("searchInput");
    const tableRows = document.querySelectorAll("#medicinesTable tbody tr");

    searchInput.addEventListener("keyup", function () {
        const filter = this.value.toLowerCase();

        tableRows.forEach(row => {
            const name = row.cells[0].innerText.toLowerCase();
            const description = row.cells[1].innerText.toLowerCase();
            const dosage = row.cells[2].innerText.toLowerCase();
            const strength = row.cells[3].innerText.toLowerCase();
            const price = row.cells[4].innerText.toLowerCase();

            row.style.display =
                name.includes(filter) ||
                description.includes(filter) ||
                dosage.includes(filter) ||
                strength.includes(filter) ||
                price.includes(filter)
                    ? ""
                    : "none";
        });
    });
</script>
