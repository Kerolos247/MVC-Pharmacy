@model IEnumerable<WebApplication4.Models.Medicine>

<h1>Medicines</h1>

<!-- زرار للعودة للـ Dashboard -->
<a asp-controller="Auth" asp-action="Main" class="btn btn-secondary mb-3">Back to Dashboard</a>

<a asp-action="Create" class="btn btn-primary mb-3">Add New Medicine</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Dosage Form</th>
            <th>Strength</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var med in Model)
        {
            <tr>
                <td>@med.Name</td>
                <td>@med.Description</td>
                <td>@med.DosageForm</td>
                <td>@med.Strength</td>
                <td>@med.Price.ToString("C")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@med.MedicineId" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@med.MedicineId" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@med.MedicineId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
