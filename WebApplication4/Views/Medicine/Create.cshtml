@model WebApplication4.Dto.RequestCreateMedcine
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SaaS Pharmacy | Create New Medicine</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/Medicine_Create.css">
</head>
<body>

    <div class="create-card">
        <div class="header">
            <h1>Create New Medicine</h1>
            <p>Add a new pharmaceutical product to your SaaS catalog</p>
        </div>

        <form asp-action="Create" method="post">
            <div class="form-grid">
                <div class="form-group full-width">
                    <label asp-for="Name">Medicine Name</label>
                    <input asp-for="Name" class="form-control" placeholder="Enter medicine name..." />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group full-width">
                    <label asp-for="Description">Description</label>
                    <input asp-for="Description" class="form-control" placeholder="What is this medicine for?" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="DosageForm">Dosage Form</label>
                    <input asp-for="DosageForm" class="form-control" placeholder="e.g. Capsule, Injection" />
                    <span asp-validation-for="DosageForm" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Strength">Strength</label>
                    <input asp-for="Strength" class="form-control" placeholder="e.g. 10mg / 5ml" />
                    <span asp-validation-for="Strength" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CategoryId">Category</label>
                    <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Categories">
                        <option value="">-- Choose Category --</option>
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="SupplierId">Supplier</label>
                    <select asp-for="SupplierId" class="form-control" asp-items="ViewBag.Suppliers">
                        <option value="">-- Choose Supplier --</option>
                    </select>
                    <span asp-validation-for="SupplierId" class="text-danger"></span>
                </div>

                <div class="form-group full-width">
                    <label asp-for="Price">Unit Price ($)</label>
                    <input asp-for="Price" type="number" step="0.01" class="form-control" placeholder="0.00" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <h4>Inventory Details</h4>

                <div class="form-group">
                    <label asp-for="Quantity">Initial Quantity</label>
                    <input asp-for="Quantity" type="number" class="form-control" min="1" placeholder="Minimum 1" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ExpiryDate">Expiration Date</label>
                    <input asp-for="ExpiryDate" type="date" class="form-control" />
                    <span asp-validation-for="ExpiryDate" class="text-danger"></span>
                </div>
            </div>

            <div class="footer-actions">
                <a asp-action="Index" class="btn-cancel">Discard</a>
                <button type="submit" class="btn-submit">Register Medicine</button>
            </div>
        </form>
    </div>

</body>
</html>
