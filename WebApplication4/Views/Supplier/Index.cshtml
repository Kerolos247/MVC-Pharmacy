@{
    Layout = null;
}

@model IEnumerable<WebApplication4.Models.Supplier>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Suppliers</title>
    <style>
        /* ===============================
                   Buttons & Fancy Search
                   =============================== */

        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 1000px;
            margin: 0 auto;
            padding: 20px;
        }

        h1 {
            text-align: center;
            margin-bottom: 25px;
            color: #212529;
        }

        /* ===== Top Action Buttons ===== */
        .top-actions {
            text-align: center;
            margin: 25px 0 20px 0;
        }

            .top-actions a {
                display: inline-block;
                margin: 8px 6px;
                padding: 10px 26px;
                font-size: 15px;
                font-weight: 600;
                border-radius: 10px;
                text-decoration: none;
                color: #ffffff;
                transition: all 0.3s ease;
                box-shadow: 0 4px 10px rgba(0, 0, 0, 0.12);
            }

        .add-button {
            background: linear-gradient(135deg, #0d6efd, #0056d6);
        }

            .add-button:hover {
                background: linear-gradient(135deg, #0056d6, #0a58ca);
                transform: translateY(-2px);
                box-shadow: 0 8px 18px rgba(13, 110, 253, 0.35);
            }

        .btn-back-dashboard {
            background: linear-gradient(135deg, #6c757d, #495057);
        }

            .btn-back-dashboard:hover {
                background: linear-gradient(135deg, #495057, #343a40);
                transform: translateY(-2px);
                box-shadow: 0 8px 18px rgba(0, 0, 0, 0.25);
            }

        /* ===== Fancy Search ===== */
        .search-wrapper {
            display: flex;
            justify-content: center;
            margin: 28px 0 35px 0;
        }

        .search-box {
            position: relative;
            width: 420px;
            max-width: 92%;
        }

            .search-box input {
                width: 100%;
                padding: 14px 18px 14px 50px;
                font-size: 16px;
                font-weight: 500;
                border-radius: 16px;
                border: 1px solid #d0d7e2;
                background-color: #ffffff;
                color: #212529;
                transition: all 0.35s ease;
                box-sizing: border-box;
                box-shadow: 0 10px 28px rgba(0, 0, 0, 0.08);
            }

                .search-box input::placeholder {
                    color: #9aa4b2;
                    font-weight: 500;
                }

                .search-box input:focus {
                    outline: none;
                    border-color: #0d6efd;
                    box-shadow: 0 0 0 4px rgba(13, 110, 253, 0.15), 0 14px 35px rgba(13, 110, 253, 0.28);
                    transform: translateY(-2px);
                }

            .search-box .search-icon {
                position: absolute;
                left: 18px;
                top: 50%;
                transform: translateY(-50%);
                font-size: 18px;
                color: #0d6efd;
                pointer-events: none;
            }

        /* ===== Table ===== */
        table {
            width: 100%;
            border-collapse: collapse;
            background-color: #ffffff;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 10px 28px rgba(0, 0, 0, 0.08);
        }

            table th, table td {
                padding: 12px 15px;
                text-align: left;
            }

            table thead {
                background-color: #0d6efd;
                color: #ffffff;
            }

            table tbody tr {
                border-bottom: 1px solid #dee2e6;
            }

                table tbody tr:nth-child(even) {
                    background-color: #f1f3f5;
                }

                table tbody tr:hover {
                    background-color: #e9ecef;
                }

            /* Action Buttons inside table */
            table .btn-info,
            table .btn-warning,
            table .btn-danger {
                padding: 6px 12px;
                margin-right: 4px;
                border-radius: 8px;
                color: #ffffff;
                text-decoration: none;
                font-size: 14px;
                font-weight: 500;
                transition: all 0.3s ease;
            }

        .btn-info {
            background-color: #0dcaf0;
        }

            .btn-info:hover {
                background-color: #31d2f2;
                transform: translateY(-2px);
            }

        .btn-warning {
            background-color: #ffc107;
        }

            .btn-warning:hover {
                background-color: #ffcd39;
                transform: translateY(-2px);
            }

        .btn-danger {
            background-color: #dc3545;
        }

            .btn-danger:hover {
                background-color: #e4606d;
                transform: translateY(-2px);
            }

        /* ===== Responsive ===== */
        @@media (max-width: 576px) {
            .search-box

        {
            width: 100%;
        }

        .top-actions a {
            width: 100%;
            max-width: 320px;
            display: block;
            margin: 8px auto;
        }

        }
    </style>
</head>
<body>

    <div class="container">

        <h1>Suppliers</h1>

        <!-- Top Action Buttons -->
        <div class="top-actions">
            <a asp-action="Create" class="add-button">Add New Supplier</a>
            <a href="/auth/main" class="btn-back-dashboard">Back to Dashboard</a>
        </div>

        <!-- Search Box -->
        <div class="search-wrapper">
            <div class="search-box">
                <span class="search-icon">🔍</span>
                <input type="text" id="searchInput" placeholder="Search suppliers by name, phone, or email..." />
            </div>
        </div>

        <!-- Suppliers Table -->
        <table id="suppliersTable">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Phone</th>
                    <th>Email</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var supplier in Model)
                {
                    <tr>
                        <td>@supplier.Name</td>
                        <td>@supplier.Phone</td>
                        <td>@supplier.Email</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@supplier.SupplierId" class="btn-info">Details</a>
                            <a asp-action="Edit" asp-route-id="@supplier.SupplierId" class="btn-warning">Edit</a>
                            <a asp-action="Delete" asp-route-id="@supplier.SupplierId" class="btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>

    <!-- Search Script -->
    <script>
        const searchInput = document.getElementById("searchInput");
        const tableRows = document.querySelectorAll("#suppliersTable tbody tr");

        searchInput.addEventListener("keyup", function () {
            const filter = this.value.toLowerCase();

            tableRows.forEach(row => {
                const name = row.cells[0].innerText.toLowerCase();
                const phone = row.cells[1].innerText.toLowerCase();
                const email = row.cells[2].innerText.toLowerCase();

                row.style.display =
                    name.includes(filter) ||
                    phone.includes(filter) ||
                    email.includes(filter)
                        ? ""
                        : "none";
            });
        });
    </script>

</body>
</html>
