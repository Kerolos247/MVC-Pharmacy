@model IEnumerable<WebApplication4.Models.Supplier>
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pharmacy OS | Suppliers Management</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/css/Supplier_Main.css">
</head>
<body>

    <div class="container">
        <h1>Suppliers Registry</h1>
        <p class="subtitle">Manage pharmaceutical distributors and contact information</p>

        <div class="top-actions">
            <a asp-action="Create" class="btn-main add-button">
                <span>➕</span> Add New Supplier
            </a>
            <a href="/auth/main" class="btn-main btn-back">
                <span>🏠</span> Dashboard
            </a>
        </div>

        <div class="search-wrapper">
            <div class="search-box">
                <span class="search-icon">🔍</span>
                <input type="text" id="searchInput" placeholder="Search by name, phone, or email..." />
            </div>
        </div>

        <div class="table-container">
            <table id="suppliersTable">
                <thead>
                    <tr>
                        <th>Supplier Name</th>
                        <th>Contact Phone</th>
                        <th>Email Address</th>
                        <th style="text-align: center;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var supplier in Model)
                    {
                        <tr>
                            <td style="font-weight: 600; color: #fff;">@supplier.Name</td>
                            <td><span style="opacity: 0.7;">📞</span> @supplier.Phone</td>
                            <td><span style="opacity: 0.7;">✉️</span> @supplier.Email</td>
                            <td>
                                <div class="action-links">
                                    <a asp-action="Details" asp-route-id="@supplier.SupplierId" class="badge-btn btn-details">Details</a>
                                    <a asp-action="Edit" asp-route-id="@supplier.SupplierId" class="badge-btn btn-edit">Edit</a>
                                    <a asp-action="Delete" asp-route-id="@supplier.SupplierId" class="badge-btn btn-delete">Delete</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <script src="~/js/Supplier_Main.js"></script>

</body>
</html>