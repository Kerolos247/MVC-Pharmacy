@{
    Layout = null;
}

@model WebApplication4.Models.Supplier

<!DOCTYPE html>
<html>
<head>
    <title>Delete Supplier</title>
    <link rel="stylesheet" href="~/css/DeleteSupplier.css" />
</head>
<body>

    <div class="delete-container">

        <h1>Delete Supplier</h1>
        <p class="warning-text">⚠️ Are you sure you want to delete this supplier?</p>

        <table class="details-table">
            <tr>
                <th>Name</th>
                <td>@Model.Name</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>@Model.Phone</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>@Model.Email</td>
            </tr>
        </table>

        <form asp-action="Delete" method="post" class="actions">
            <input type="hidden" asp-for="SupplierId" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>

    </div>

</body>
</html>
