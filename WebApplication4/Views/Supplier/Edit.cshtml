@model WebApplication4.Dto.UpdateSupplierDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SaaS Pharmacy | Update Supplier</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700;800&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/css/Supplier_Edit.css">
</head>
<body>

    <div class="edit-card">
        <div class="header">
            <h1>Update Supplier</h1>
            <p>Modify partner contact information</p>
        </div>

        <form asp-action="Edit" method="post">
            <div class="form-group">
                <label asp-for="Name">Supplier Name</label>
                <input asp-for="Name" class="form-control" placeholder="Enter company name..." />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Phone">Direct Phone</label>
                <input asp-for="Phone" class="form-control" placeholder="+1 234 567 890" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email">Email Address</label>
                <input asp-for="Email" class="form-control" placeholder="vendor@example.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="actions">
                <button type="submit" class="btn btn-primary">
                    💾 Save Updates
                </button>
                <a asp-action="Index" class="btn btn-secondary">Discard Changes</a>
            </div>
        </form>
    </div>

</body>
</html>