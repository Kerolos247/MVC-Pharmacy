@model WebApplication4.Dto.RequestCreateSupplier
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SaaS Pharmacy | New Supplier</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700;800&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/css/Supplier_Create.css">
</head>
<body>

    <div class="create-card">
        <div class="header">
            <div class="icon-circle">➕</div>
            <h1>Add New Supplier</h1>
            <p style="color: var(--text-dim); font-size: 14px; margin-top: 10px;">Register a new partner in your network</p>
        </div>

        <form asp-action="Create" method="post">
            <div class="form-group">
                <label asp-for="Name">Full Business Name</label>
                <input asp-for="Name" class="form-control" placeholder="e.g. Global Pharma Solutions" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Phone">Contact Number</label>
                <input asp-for="Phone" class="form-control" placeholder="+20 1XX XXX XXXX" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email">Official Email</label>
                <input asp-for="Email" class="form-control" placeholder="contact@company.com" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="actions">
                <button type="submit" class="btn btn-success">
                    Confirm & Register
                </button>
                <a asp-action="Index" class="btn btn-secondary">Discard</a>
            </div>
        </form>
    </div>

</body>
</html>