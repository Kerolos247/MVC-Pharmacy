@{
    Layout = null;
}

@model IEnumerable<WebApplication4.Dto.InventoryDto>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Inventory List</title>

    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            margin: 20px;
        }

        h1 {
            color: #343a40;
            margin-bottom: 20px;
        }

        .table {
            background-color: #ffffff;
            border-radius: 5px;
            border: 1px solid #dee2e6;
            width: 100%;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
            border-collapse: collapse;
        }

            .table th, .table td {
                text-align: center;
                vertical-align: middle;
                padding: 10px;
            }

            .table th {
                background-color: #007bff;
                color: #ffffff;
            }

        .table-striped tbody tr:nth-of-type(odd) {
            background-color: #f2f2f2;
        }

        .btn {
            margin: 2px;
            padding: 5px 10px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .btn-danger {
            background-color: #dc3545;
            color: #ffffff;
        }

            .btn-danger:hover {
                background-color: #c82333;
            }

        .btn-sm {
            font-size: 0.85rem;
        }

        .btn-back-dashboard {
            background-color: #28a745;
            color: #ffffff;
            padding: 8px 15px;
            border-radius: 5px;
            font-size: 0.9rem;
            font-weight: bold;
            text-decoration: none;
            display: inline-block;
        }

            .btn-back-dashboard:hover {
                background-color: #218838;
                transform: translateY(-2px);
            }

        .search-wrapper input {
            width: 350px;
            max-width: 90%;
            padding: 12px 18px;
            border-radius: 12px;
            border: 1px solid #d0d7e2;
            font-size: 16px;
            font-weight: 500;
            box-shadow: 0 5px 15px rgba(0,0,0,0.05);
        }

            .search-wrapper input:focus {
                outline: none;
                border-color: #007bff;
                box-shadow: 0 0 0 4px rgba(0,123,255,0.15), 0 10px 28px rgba(0,123,255,0.28);
            }

        
        .low-stock {
            background-color: yellowgreen !important; 
            color: #fff !important;
        }

       
        .out-of-stock {
            background-color: red !important;
            color: #fff !important;
        }

        .status-text {
            font-weight: bold;
            padding: 2px 6px;
            border-radius: 4px;
            color: #000; 
        }

    </style>
</head>
<body>

    <h1>Inventory List</h1>

    <a asp-controller="Auth" asp-action="Main" class="btn btn-back-dashboard mb-3">
        Back to Dashboard
    </a>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <div class="search-wrapper" style="text-align:center; margin:20px 0;">
        <input type="text" id="searchInput"
               placeholder="Search inventory by medicine, dosage, strength, quantity, or expiry..." />
    </div>

    <table class="table table-striped" id="inventoryTable">
        <thead>
            <tr>
                <th>Medicine</th>
                <th>Dosage Form</th>
                <th>Strength</th>
                <th>Quantity</th>
                <th>Status</th>
                <th>Expiry Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var inv in Model)
            {
                <tr>
                    <td>@inv.MedicineName</td>
                    <td>@inv.DosageForm</td>
                    <td>@inv.Strength</td>
                    <td class="quantity-cell" data-quantity="@inv.Quantity">@inv.Quantity</td>
                    <td class="status-cell"></td>
                    <td>@inv.ExpiryDate.ToShortDateString()</td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@inv.InventoryId" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <script>
        const searchInput = document.getElementById("searchInput");
        const tableRows = document.querySelectorAll("#inventoryTable tbody tr");

        searchInput.addEventListener("keyup", function () {
            const filter = this.value.toLowerCase();
            tableRows.forEach(row => {
                const cells = row.querySelectorAll("td");
                const matches = Array.from(cells).some(cell => cell.innerText.toLowerCase().includes(filter));
                row.style.display = matches ? "" : "none";
            });
        });

        document.addEventListener("DOMContentLoaded", function () {
            const rows = document.querySelectorAll("#inventoryTable tbody tr");

            rows.forEach(row => {
                const quantityCell = row.querySelector(".quantity-cell");
                const statusCell = row.querySelector(".status-cell");
                const quantity = parseInt(quantityCell.dataset.quantity);

                if (quantity === 0) {
                    row.classList.add("out-of-stock");
                    statusCell.innerHTML = '<span class="status-text">Out</span>';
                }
                else if (quantity < 10) {
                    row.classList.add("low-stock"); 
                    statusCell.innerHTML = '<span class="status-text">Low</span>';
                }
                else {
                    row.classList.remove("out-of-stock", "low-stock");
                    statusCell.innerHTML = '<span class="status-text">OK</span>';
                }
            });
        });
    </script>

</body>
</html>
