@model PharmacistLoginDto

<link rel="stylesheet" href="~/css/login.css" />

<div class="login-page">
    <div class="login-card">

        <h2 class="login-title">Welcome Back</h2>

        <form asp-action="Login" method="post">
            @Html.AntiForgeryToken()

            <label class="form-label fw-semibold">Email</label>
            <input asp-for="Email"
                   class="form-control"
                   placeholder="Enter your email" />
            <span asp-validation-for="Email" class="text-danger small"></span>

            <label class="form-label fw-semibold mt-2">Password</label>
            <input asp-for="Password"
                   type="password"
                   class="form-control"
                   placeholder="********" />
            <span asp-validation-for="Password" class="text-danger small"></span>

            <!-- Forgot Password -->
            <div class="text-end mt-1">
                <a asp-controller="Auth"
                   asp-action="ForgotPassword"
                   class="text-decoration-none small fw-semibold text-primary">
                    Forgot your password?
                </a>
            </div>

            <button type="submit" class="btn btn-login mt-3">
                Login
            </button>

            <a asp-controller="Auth"
               asp-action="Register"
               class="btn btn-outline-primary btn-login mt-3">
                Register
            </a>
        </form>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/login.js"></script>
}
