@model PharmacistLoginDto

<style>
    .login-card {
        max-width: 420px;
        margin: 60px auto;
        padding: 35px;
        border-radius: 20px;
        background: #ffffff;
        box-shadow: 0 15px 25px rgba(0, 0, 0, 0.1);
        transition: 0.3s;
    }

        .login-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 22px 38px rgba(0, 0, 0, 0.18);
        }

    .login-title {
        text-align: center;
        font-weight: 800;
        font-size: 30px;
        margin-bottom: 25px;
        color: #198754;
        letter-spacing: 1px;
    }

    .form-control {
        height: 48px;
        border-radius: 12px;
        padding-left: 15px;
        font-size: 15px;
        margin-bottom: 15px;
    }

    .btn-login {
        width: 100%;
        height: 50px;
        border-radius: 12px;
        font-size: 18px;
        font-weight: 700;
        letter-spacing: .5px;
    }
</style>

<div class="login-card">
    <h2 class="login-title">Welcome Back</h2>

    <form asp-action="Login" method="post">
        @Html.AntiForgeryToken()

        <label class="form-label fw-semibold">Email</label>
        <input asp-for="Email" placeholder="Enter your email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger small"></span>

        <label class="form-label fw-semibold mt-2">Password</label>
        <input asp-for="Password" type="password" placeholder="********" class="form-control" />
        <span asp-validation-for="Password" class="text-danger small"></span>

        <button class="btn btn-success btn-login mt-3">Login</button>

        <a asp-action="Register" asp-controller="auth" class="btn btn-outline-primary btn-login mt-3">
            Register
        </a>

    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
