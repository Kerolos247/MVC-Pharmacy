@model PharmacistRegisterDto

<link rel="stylesheet" href="~/css/register.css" />

<div class="register-card">
    <h2 class="register-title">Create Account</h2>

    <form asp-action="Register" method="post">
        @Html.AntiForgeryToken()

        <div class="mb-3">
            <label class="form-label fw-semibold">Full Name</label>
            <input asp-for="FullName" class="form-control" placeholder="Enter your full name" />
            <span asp-validation-for="FullName" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label class="form-label fw-semibold">Email</label>
            <input asp-for="Email" class="form-control" placeholder="example@mail.com" />
            <span asp-validation-for="Email" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label class="form-label fw-semibold">Password</label>
            <input asp-for="Password" type="password" class="form-control" placeholder="********" />
            <span asp-validation-for="Password" class="text-danger small"></span>
        </div>

        <button class="btn btn-primary btn-register mt-3">Register</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
