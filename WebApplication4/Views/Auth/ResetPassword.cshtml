@model WebApplication4.Dto.ResetPasswordDto

<link rel="stylesheet" href="~/css/login.css" />

<div class="login-page">
    <div class="login-card">

        <h2 class="login-title">Reset Your Password</h2>
        @if (ViewData.ModelState.ErrorCount > 0)
        {
            <div class="alert alert-danger mt-3" role="alert">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <div>@error.ErrorMessage</div>
                   
                }
            </div>
        }
        <form asp-action="ResetPassword" method="post">
            @Html.AntiForgeryToken()

            <input type="hidden" asp-for="Token" />
            <input type="hidden" asp-for="Email" />

            <label class="form-label fw-semibold mt-2">New Password</label>
            <input asp-for="Password"
                   type="password"
                   class="form-control"
                   placeholder="Enter new password" />
            <span asp-validation-for="Password" class="text-danger small"></span>

            <label class="form-label fw-semibold mt-2">Confirm Password</label>
            <input asp-for="ConfirmPassword"
                   type="password"
                   class="form-control"
                   placeholder="Confirm new password" />
            <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>

            <button type="submit" class="btn btn-login mt-3">
                Reset Password
            </button>

            <a asp-controller="Auth" asp-action="Login"
               class="btn btn-outline-primary btn-login mt-3">
                Back to Login
            </a>
        </form>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
