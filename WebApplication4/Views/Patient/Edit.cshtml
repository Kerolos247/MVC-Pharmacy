@model WebApplication4.Dto.UpdatePatientDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SaaS Pharmacy | Edit Patient Profile</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700;800&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/css/Patient_Edit.css">
</head>
<body>

    <div class="edit-container">
        <div class="header">
            <span class="avatar-icon">👤</span>
            <h1>Edit Patient</h1>
            <p>Update personal information and contact details</p>
        </div>

        <form asp-action="Edit" method="post">

            <div class="form-group">
                <label asp-for="FullName">Full Name</label>
                <div class="input-wrapper">
                    <input asp-for="FullName" class="form-control" placeholder="e.g. John Doe" />
                    <span class="input-icon">📝</span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Phone">Mobile Number</label>
                <div class="input-wrapper">
                    <input asp-for="Phone" class="form-control" placeholder="+1 234 567 890" />
                    <span class="input-icon">📞</span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Address">Residential Address</label>
                <div class="input-wrapper">
                    <input asp-for="Address" class="form-control" placeholder="Street, City, Country" />
                    <span class="input-icon">📍</span>
                </div>
            </div>

            <div class="footer-actions">
                <button type="submit" class="btn-save">Save Changes</button>
                <a asp-action="Index" class="btn-cancel">Discard Changes</a>
            </div>

        </form>
    </div>

</body>
</html>